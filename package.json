{
    "name": "silver-bullet-cookbook",
    "#{version}#": "#{versionNumber}#",
    "repository": "https://github.com/samjavner/silver-bullet-cookbook",
    "author": "Sam Javner <samuel.javner@gmail.com>",
    "license": "MIT",
    "scripts": {
        "start": "electron-webpack dev",
        "test": "jest --watch",
        "build": "yarn run build:lint && yarn run build:test && yarn run build:webpack && yarn run build:electron",
        "build:lint": "yarn run build:tslint && yarn run build:stylelint",
        "build:tslint": "tslint --config tslint.json --project tsconfig.json",
        "build:stylelint": "stylelint \"src/**/*.scss\"",
        "build:test": "jest --ci --reporters=jest-junit",
        "build:webpack": "electron-webpack",
        "build:electron": "electron-builder --publish=never",
        "postinstall": "electron-builder install-app-deps",
        "precommit": "lint-staged"
    },
    "devDependencies": {
        "@types/classnames": "2.2.6",
        "@types/electron-devtools-installer": "2.2.0",
        "@types/jest": "23.3.7",
        "@types/react": "16.4.18",
        "@types/react-dom": "16.0.9",
        "@types/react-hot-loader": "4.1.0",
        "@types/react-redux": "6.0.9",
        "@types/react-test-renderer": "16.0.3",
        "@types/redux-little-router": "15.1.0",
        "@types/uuid": "3.4.4",
        "@types/webpack-env": "1.13.6",
        "electron": "3.0.5",
        "electron-builder": "20.28.4",
        "electron-webpack": "2.3.1",
        "electron-webpack-ts": "2.1.1",
        "husky": "1.1.2",
        "jest": "23.6.0",
        "jest-junit": "5.2.0",
        "lint-staged": "7.3.0",
        "node-sass": "4.9.4",
        "prettier": "1.14.3",
        "react-test-renderer": "16.6.0",
        "sass-loader": "7.1.0",
        "stylelint": "9.6.0",
        "stylelint-config-prettier": "4.0.0",
        "stylelint-config-standard": "18.2.0",
        "stylelint-scss": "3.3.2",
        "stylelint-webpack-plugin": "0.10.5",
        "ts-jest": "23.10.4",
        "tslint": "5.11.0",
        "tslint-config-prettier": "1.15.0",
        "tslint-loader": "3.5.4",
        "tslint-react": "3.6.0",
        "typescript": "3.1.3",
        "webpack": "4.21.0"
    },
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "1.2.8",
        "@fortawesome/free-solid-svg-icons": "5.5.0",
        "@fortawesome/react-fontawesome": "0.1.3",
        "bulma": "0.7.2",
        "classnames": "2.2.6",
        "electron-devtools-installer": "2.2.4",
        "normalize.css": "8.0.0",
        "react": "16.6.0",
        "react-dom": "16.6.0",
        "react-hot-loader": "4.3.11",
        "react-redux": "5.1.0",
        "redux": "4.0.1",
        "reselect": "4.0.0",
        "source-map-support": "0.5.9",
        "sqlite": "3.0.0",
        "uuid": "3.3.2"
    },
    "electronWebpack": {
        "main": {
            "webpackConfig": "webpack.main.additions.js"
        },
        "renderer": {
            "webpackConfig": "webpack.renderer.additions.js"
        },
        "title": "Silver Bullet Cookbook"
    },
    "jest": {
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "moduleNameMapper": {
            "\\.(css|scss)$": "<rootDir>/__mocks__/styleMock.js"
        },
        "transform": {
            "^.+\\.tsx?$": "ts-jest"
        },
        "globals": {
            "ts-jest": {
                "tsConfig": "tsconfig.jest.json"
            }
        },
        "testRegex": "(/__tests__/.*|\\.(test|spec))\\.tsx?$",
        "roots": [
            "<rootDir>/src"
        ],
        "testURL": "http://localhost"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "tslint --fix",
            "prettier --write",
            "git add"
        ],
        "*.scss": [
            "stylelint --fix",
            "prettier --write",
            "git add"
        ],
        "*.{js,json,md,yml,yaml}": [
            "prettier --write",
            "git add"
        ]
    }
}
